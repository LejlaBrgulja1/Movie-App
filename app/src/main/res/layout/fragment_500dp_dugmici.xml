<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/grid_dugmici_siroki"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_gravity="top|center"
    android:columnCount="3">

    <Button
        android:id="@+id/button1SirokiLayout"
        android:layout_column="0"
        android:layout_gravity="end|fill"
        android:layout_row="0"
        android:layout_marginEnd="@dimen/unutrasnja_margina_fragment"
        android:text="@string/button1_500dp_layout"
        android:textSize="@dimen/button_text"
        android:textColor="@color/bijela"
        style="?android:attr/buttonBarButtonStyle" />

    <Button
        android:id="@+id/button2SirokiLayout"
        android:layout_column="1"
        android:layout_marginStart="@dimen/unutrasnja_margina_fragment"
        android:layout_gravity="start|fill"
        android:layout_row="0"
        android:text="@string/button2_500dp_layout"
        android:textSize="@dimen/button_text"
        android:textColor="@color/bijela"
        style="?android:attr/buttonBarButtonStyle" />


</GridLayout>