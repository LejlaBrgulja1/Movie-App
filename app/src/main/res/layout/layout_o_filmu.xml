<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bijela"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textViewNaziv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/druga"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_gravity="center_horizontal"
            android:calendarViewShown="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/druga"
            android:text="@string/detaljiFilmovi"/>
        <EditText
            android:id="@+id/editTextDetalji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/druga"
            android:ems="2"
            android:maxHeight="50dp"
            android:scrollbars="vertical"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/buttonSpasi"
            android:background="@color/prva"
            android:textColor="@color/bijela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spasi"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>
</LinearLayout>

</ScrollView>