<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:ignore="ContentDescription" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="3">


        <TextView
            android:id="@+id/textViewIme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="@dimen/glavna_margina"
            android:layout_marginStart="@dimen/glavna_margina"
            android:layout_marginTop="7dp"
            android:text="TextView"
            android:textColor="@color/bijela"
            android:textSize="@dimen/naslov"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewGodina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="@dimen/glavna_margina"
            android:layout_marginStart="@dimen/glavna_margina"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="TextView"
            android:textColor="@color/bijela"
            android:textSize="@dimen/podnaslov"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewMjesto"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="@dimen/glavna_margina"
            android:layout_marginStart="@dimen/glavna_margina"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:maxLines="3"
            android:text="TextView"
            android:textColor="@color/bijela"
            android:textSize="@dimen/podnaslov"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/textViewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/glavna_margina"
            android:layout_marginLeft="@dimen/glavna_margina"
            android:layout_marginRight="@dimen/glavna_margina"
            android:layout_marginStart="@dimen/glavna_margina"
            android:layout_marginTop="2dp"
            android:textColor="@color/bijela"
            android:text="TextView"
            android:textSize="@dimen/naslov"
            tools:ignore="HardcodedText" />
    </GridLayout>

</LinearLayout>