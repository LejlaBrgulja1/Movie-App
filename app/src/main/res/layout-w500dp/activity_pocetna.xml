<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@drawable/gradijent_pozadina">

    <FrameLayout
        android:id="@+id/dugmiciSirokiFrameLayout"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="#18191c"></FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_marginBottom="@dimen/vanjska_margina_fragment"
            android:layout_marginStart="@dimen/vanjska_margina_fragment"
            android:layout_marginTop="@dimen/vanjska_margina_fragment"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/unutrasnja_margina_fragment"
            android:id="@+id/lijeviSirokiFrameLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"></FrameLayout>

        <FrameLayout

            android:layout_weight="1"
            android:id="@+id/desniSirokiFrameLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>

</LinearLayout>